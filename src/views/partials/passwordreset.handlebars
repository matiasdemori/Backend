{{!-- Formulario para restablecer contraseña de usuario por correo electrónico --}}
<h1>Generar Nuevo Correo de Restablecimiento</h1>

{{!-- Formulario para enviar datos de inicio de sesión al servidor --}}
<form action="/api/users/requestPasswordReset" method="POST">

    <!-- Etiqueta y campo de entrada para el email -->
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    <br>

    <!-- Botón de envío del formulario para registrar -->
    <button type="submit">Enviar Correo de Restablecimiento</button>

</form>

{{!-- Mensaje de error si el usuario no existe --}}
{{#if error}}
    <p class="error-message">{{error}}</p>
{{/if}}