{{!-- Cuerpo de la página de restablecimiento de contraseña --}}
<h1>Restablecimiento de Contraseña</h1>

{{!-- Formulario para enviar datos de restablecimiento de contraseña al servidor --}}
<form action="/api/users/reset-password/" method="POST">

    <!-- Etiqueta y campo de entrada para el correo electronico -->
    <label for="email">Correo Electrónico:</label>
    <input type="email" id="email" name="email" required>

    <!-- Etiqueta y campo de entrada para el token de confirmación -->
    <label for="token">Número de Confirmación:</label>
    <input type="text" id="token" name="token" required> 

    {{!-- Etiqueta y campo de entrada para la nueva contraseña --}}
    <label for="password">Nueva Contraseña:</label>
    <input type="password" id="password" name="password" required>

    <!-- Botón de envío del formulario para restablecer la contraseña -->
    <button type="submit">Restablecer Contraseña</button>

</form>

{{!-- Mensaje de error si existe --}}
{{#if error}}
    <p class="error-message">{{error}}</p>
{{/if}}