<h1 class="text-center">Carrito de Compras</h1>

{{!-- Contenedor para mostrar los productos en el carrito de compras --}}
// Como es el comentario para 
<div class="container">
    {{!-- Itero sobre la lista de productos en el carrito de compras --}}
    {{#each productos}}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Producto: {{this.product.title}}</h5>
            <p class="card-text">Categoria: {{this.product.category}} </p>
            <p class="card-text">Codigo de producto: {{this.product.code}}</p>
            <p class="card-text">Cantidad: {{this.quantity}}</p>
            <p class="card-text">Precio: ${{this.product.totalPrice}}</p>
            {{!-- Botón para eliminar el producto del carrito de compras. Llamando a la función 'eliminarProducto' y pasando el ID del carrito de compras y el ID del producto a eliminar. --}}
            <button onclick="eliminarProducto('{{this.cartId}}', '{{this.product._id}}')"
                class="btn btn-danger">Eliminar</button>
        </div>
    </div>
    {{/each}}
</div>

{{!-- Botón para vaciar el carrito de compras. Llamando a la función 'vaciarCarrito' y pasando el ID del carrito de compras. --}}
<button onclick="vaciarCarrito('{{cartId}}')" class="btn btn-danger">Vaciar Carrito</button>
<h3 class="mt-2">Total de la compra: ${{totalCompra}}</h3>

{{!-- Botón para finalizar la compra. Llamando a la función 'vaciarCarrito' y pasando el ID del carrito de compras. --}}
<form method="post" action="/api/carts/{{cartId}}/purchase">
    <button type="submit" class="btn btn-success">Finalizar Compra</button>
</form>

{{!--Importo las funciones eliminarProducto y vaciarCarrito de la carpeta public/js.--}} 
<script src="/public/js/carts.js"></script>